<h1>Tasks</h1>

<%= form_with(model: Task.new, url: tasks_path, local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.submit "Create Task" %>
<% end %>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.title %> <%= " - Completed" if task.completed %></li>
  <% end %>
</ul>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>